{% extends 'base.html.twig' %}

{% block title %}Warrior index{% endblock %}

{% block body %}
    <h1>Warrior index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Experience</th>
                <th>Strength</th>
                <th>Speed</th>
                <th>Dexterity</th>
                <th>Constitution</th>
                <th>Intelligence</th>
                <th>Will</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for warrior in warriors %}
            <tr>
                <td>{{ warrior.id }}</td>
                <td>{{ warrior.name }}</td>
                <td>{{ warrior.description }}</td>
                <td>{{ warrior.Experience }}</td>
                <td>{{ warrior.Strength }}</td>
                <td>{{ warrior.Speed }}</td>
                <td>{{ warrior.Dexterity }}</td>
                <td>{{ warrior.Constitution }}</td>
                <td>{{ warrior.Intelligence }}</td>
                <td>{{ warrior.Will }}</td>
                <td>
                    <a href="{{ path('app_warrior_show', {'id': warrior.id}) }}">show</a>
                    <a href="{{ path('app_warrior_edit', {'id': warrior.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_warrior_new') }}">Create new</a>
{% endblock %}
