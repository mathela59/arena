{% extends 'base.html.twig' %}

{% block title %}Sentence index{% endblock %}

{% block body %}
    <h1>Sentence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Action</th>
                <th>Critic</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sentence in sentences %}
            <tr>
                <td>{{ sentence.id }}</td>
                <td>{{ sentence.text }}</td>
                <td>{{ sentence.action }}</td>
                <td>{{ sentence.critic ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_sentence_show', {'id': sentence.id}) }}">show</a>
                    <a href="{{ path('app_sentence_edit', {'id': sentence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sentence_new') }}">Create new</a>
{% endblock %}
