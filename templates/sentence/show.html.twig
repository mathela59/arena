{% extends 'base.html.twig' %}

{% block title %}Sentence{% endblock %}

{% block body %}
    <h1>Sentence</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sentence.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ sentence.text }}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>{{ sentence.action }}</td>
            </tr>
            <tr>
                <th>Critic</th>
                <td>{{ sentence.critic ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sentence_index') }}">back to list</a>

    <a href="{{ path('app_sentence_edit', {'id': sentence.id}) }}">edit</a>

    {{ include('sentence/_delete_form.html.twig') }}
{% endblock %}
