{% extends 'base.html.twig' %}

{% block title %}Traits{% endblock %}

{% block body %}
    <h1>Traits</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trait.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trait.name }}</td>
            </tr>
            <tr>
                <th>ShortCode</th>
                <td>{{ trait.shortCode }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trait.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_traits_index') }}">back to list</a>

    <a href="{{ path('app_traits_edit', {'id': trait.id}) }}">edit</a>

    {{ include('traits/_delete_form.html.twig') }}
