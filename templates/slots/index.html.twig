{% extends 'base.html.twig' %}

{% block title %}Slots index{% endblock %}

{% block body %}
    <h1>Slots index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slot in slots %}
            <tr>
                <td>{{ slot.id }}</td>
                <td>{{ slot.name }}</td>
                <td>{{ slot.description }}</td>
                <td>
                    <a href="{{ path('app_slots_show', {'id': slot.id}) }}">show</a>
                    <a href="{{ path('app_slots_edit', {'id': slot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_slots_new') }}">Create new</a>
{% endblock %}
