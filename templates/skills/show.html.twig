{% extends 'base.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}
    <h1>Skills</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skill.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ skill.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ skill.description }}</td>
            </tr>
            <tr>
                <th>Modifiers</th>
                <td>{{ skill.modifiers ? skill.modifiers|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Requirements</th>
                <td>{{ skill.requirements ? skill.requirements|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_skills_index') }}">back to list</a>

    <a href="{{ path('app_skills_edit', {'id': skill.id}) }}">edit</a>

    {{ include('skills/_delete_form.html.twig') }}
{% endblock %}
