{% extends 'base.html.twig' %}

{% block title %}Hello CombatListController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Liste des combats</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Opponents</th>
                <th>Winner</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for combat in CombatList %}
                <tr>
                    <td>{{ combat.first.name }} vs {{ combat.second.name }}</td>
                    <td></td>
                    <td><a href="{{ url('app_combat_view',{id: combat.id}) }}">View Combat</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
