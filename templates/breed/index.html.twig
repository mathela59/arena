{% extends 'base.html.twig' %}

{% block title %}Breed index{% endblock %}

{% block body %}
    <h1>Breed index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Modifiers</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for breed in breeds %}
            <tr>
                <td>{{ breed.id }}</td>
                <td>{{ breed.name }}</td>
                <td>{{ breed.Description }}</td>
                <td>{{ breed.modifiers ? breed.modifiers|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_breed_show', {'id': breed.id}) }}">show</a>
                    <a href="{{ path('app_breed_edit', {'id': breed.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_breed_new') }}">Create new</a>
{% endblock %}
